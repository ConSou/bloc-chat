import React, { Component } from 'react';

class Activated extends Component {

  render() {

    for(var x in this.props.messages){
      let activeMessageId = this.props.messages[x].roomId;
      let activeMessage = this.props.messages[x];
      if(this.props.activeRoom.key === activeMessageId){
        return (
          <div className="activated">
          <h2> {this.props.activeRoom.name} </h2>
          <table>
            <tbody>
            <tr>
              <td> {activeMessage.userName} </td>
              <td> {activeMessage.content} </td>
              <td> {activeMessage.sentAt} </td>
              </tr>
            </tbody>
          </table>
          </div>
        )
      }
    }
    return (
      <div className="activated">
      <h2> {this.props.activeRoom.name} </h2>
      </div>
      );
    }
  }



    export default Activated;
